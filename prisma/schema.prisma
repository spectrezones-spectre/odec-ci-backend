generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  summary   String
  content   String
  category  String
  date      String
  imageUrl  String?
  videoUrl  String?
  pdfUrl    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

// Messages du formulaire de contact
model ContactMessage {
  id        Int      @id @default(autoincrement())
  lastName  String
  firstName String
  address   String
  phone     String
  email     String
  subject   String
  message   String   @db.Text
  createdAt DateTime @default(now())
}

// Dons reçus (pour statistiques dashboard)
model Don {
  id        Int      @id @default(autoincrement())
  amount    Decimal  @db.Decimal(12, 2)
  currency  String   @default("XOF")
  donorName String?
  email     String?
  note      String?  @db.Text
  createdAt DateTime @default(now())
}

// Inscriptions (demandes d'accès, newsletter, etc.)
model Inscription {
  id        Int      @id @default(autoincrement())
  email     String
  fullName  String?
  type      String   // ex: newsletter, demande_acces
  createdAt DateTime @default(now())
}
