generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  summary   String
  content   String
  category  String
  date      String
  imageUrl  String?
  videoUrl  String?
  pdfUrl    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
